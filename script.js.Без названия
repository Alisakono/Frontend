//   5   Написать  функцию, которая в качестве аргументов получает два числа и возвращает массив чисел со значениями от меньшего числа к большем
function newArray(x, y) {
    let array = [];
    for (let i = x; i <= y; i++) array.push(i);
   console.log(array);
    return array;
  }
  newArray(4, 9);